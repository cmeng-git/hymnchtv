<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name='android:textAllCaps'>false</item>
    </style>

    <style name="ButtonKB" parent="@style/Button">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMain" parent="@style/Button">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTop" parent="@style/Button">
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="ButtonRadio" parent="@style/Button">
        <item name="android:paddingLeft">-10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="TinyFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MediumFont" parent="@android:style/TextAppearance.Medium">
    </style>

    <style name="LargeFont" parent="@android:style/TextAppearance.Large">
    </style>

    <style name="XLargeFont">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MediumFont.Style">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="AboutTextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textColorLink">@color/blue100</item>
    </style>

    <!-- Standard Spinner for hymnchtv -->
    <style name="SpinnerView" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spinner_dark</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RowList.Dark" parent="SpinnerItem">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="RowList.Light" parent="SpinnerItem">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="SpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RadioListItem.Dark" parent="SpinnerDropDownItem">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="RadioListItem.Light" parent="SpinnerDropDownItem">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <!-- Default Spinner (Font small)-->
    <style name="SpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:padding">2dp</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- Default Spinner Speed (Font small)-->
    <style name="SpinnerTransparentStyle" parent="SpinnerStyle">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12sp</item>
    </style>

    <style name="StyleTextView" parent="@android:style/Widget.Holo.EditText">
        <item name="android:radius">5dp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/white_rounded</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">21sp</item>
    </style>

</resources>
